@model List<Maestria>
@{
    ViewData["Title"] = "Maestrías";
}

<div class="text-center">
    <h1 class="display-4">Maestrías</h1>

    <div class="mt-4">
        @if (Model.Count > 0)
        {
            <a class="btn btn-success text-white" asp-controller="Maestria" asp-action="Agregar">Agregar Maestría</a>
            <table class="table mt-3">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Duración</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdMaestria</td>
                        <td>@item.Nombre</td>
                        <td>@item.Duracion</td>
                        <td><a class="btn btn-danger" asp-controller="Maestria" asp-action="Eliminar" asp-route-id="@item.IdMaestria">Eliminar</a></td>
                        <td><a class="btn btn-warning" asp-controller="Maestria" asp-action="Actualizar" asp-route-id="@item.IdMaestria">Actualizar</a></td>
                    </tr>
                }
            </table>
        }
        else
        {
            <h3 class="alert alert-info">Aún no se ha añadido ninguna maestría.</h3>
            <a class="btn btn-success text-white" asp-controller="Maestria" asp-action="Agregar">Agregar Maestría</a>
        }
    </div>
</div>