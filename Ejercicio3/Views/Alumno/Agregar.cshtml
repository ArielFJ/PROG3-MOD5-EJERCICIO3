@model Alumno
@{ 
    ViewData["Title"] = "Agregar Alumno";
}

<h1 class="display-4 text-center">Agregar Alumno</h1>

<h3 class="text-info mt-4">Llene el formulario y pulse Guardar para agregar nuevo alumno.</h3>
<form asp-controller="Alumno" asp-action="Agregar" method="post" class="mt-4">
    <div class="text-center row">

        <div class="form-group">
            <div class="col-md-12">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <label asp-for="CURP" class="control-label"></label>
                <input asp-for="CURP" class="form-control" />
                <span asp-validation-for="CURP" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <label asp-for="FechaNac" class="control-label"></label>
                <input asp-for="FechaNac" class="form-control" />
                <span asp-validation-for="FechaNac" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-5">
                <button type="submit" class="btn btn-success mt-4">Guardar</button>
            </div>
        </div>
    </div>
</form>
<a class="btn btn-primary" asp-controller="Alumno" asp-action="List">Volver</a>